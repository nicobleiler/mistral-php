{
    "name": "nicobleiler/mistral-php",
    "description": "A PHP client library for Mistral AI API with Laravel support",
    "type": "library",
    "keywords": [
        "mistral",
        "ai",
        "laravel",
        "php",
        "api",
        "mistral-ai"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Nico Bleiler",
            "email": "nicobleiler@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.3|^8.4",
        "guzzlehttp/guzzle": "^7.10",
        "illuminate/support": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "mcp/sdk": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0|^10.6",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Mistral\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mistral\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mistral\\MistralServiceProvider"
            ],
            "aliases": {
                "Mistral": "Mistral\\Facades\\Mistral",
                "MistralMcp": "Mistral\\Facades\\MistralMcp"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "bin": [
        "bin/mistral-mcp-server.php"
    ],
    "minimum-stability": "stable",
    "prefer-stable": true
}