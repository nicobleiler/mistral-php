{
    "name": "nicobleiler/mistral-php",
    "description": "A PHP client library for Mistral AI API with Laravel support",
    "type": "library",
    "keywords": ["mistral", "ai", "laravel", "php", "api", "mistral-ai"],
    "license": "MIT",
    "authors": [
        {
            "name": "Nico Bleiler",
            "email": "nicobleiler@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/support": "^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0|^9.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Mistral\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mistral\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mistral\\MistralServiceProvider"
            ],
            "aliases": {
                "Mistral": "Mistral\\Facades\\Mistral"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
